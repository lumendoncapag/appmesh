[
      {
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/microservice-demo",
            "awslogs-region": "us-east-2",
            "awslogs-stream-prefix": "ecs"
          }
        },
        "portMappings": [
          {
            "hostPort": ${port},
            "protocol": "tcp",
            "containerPort": ${port}
          }
        ],
        "environment": [
          {
            "name": "FLAMENCO_HOST",
            "value": "${flamencohost}"
          },
          {
            "name": "OPERA_HOST",
            "value": "${operahost}"
          },
          {
            "name": "PORT",
            "value": "${port}"
          }
        ],
        "memoryReservation": 128,
        "image": "pauloclouddev/${appname}app:latest",
        "essential": true,
        "name": "${appname}app"
      },
      {

        "name": "envoy",
        "image": "840364872350.dkr.ecr.us-east-2.amazonaws.com/aws-appmesh-envoy:v1.21.1.1-prod",
        "user": "1337",
        "memory": 256,
        "essential": true,
        "environment": [
          {
            "name": "APPMESH_VIRTUAL_NODE_NAME",
            "value": "mesh/${meshname}/virtualNode/${servicename}"
          },
          {
            "name": "ENABLE_ENVOY_XRAY_TRACING",
            "value": "1"
          },
          {
            "name": "ENABLE_ENVOY_STATS_TAGS",
            "value": "1"
          },
          {
            "name": "ENVOY_LOG_LEVEL",
            "value": "debug"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/microservice-demo",
            "awslogs-region": "us-east-2",
            "awslogs-stream-prefix": "/${appname}/envoy"
          }
        },
        "healthCheck": {
          "command": [
            "CMD-SHELL",
            "curl -s http://localhost:9901/server_info | grep state | grep -q LIVE"
          ],
          "interval": 6,
          "timeout": 5,
          "retries": 3
        }
      },
      {
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/microservice-demo",
            "awslogs-region": "us-east-2",
            "awslogs-stream-prefix": "${appname}/xray"
          }
        },
        "portMappings": [
          {
            "protocol": "udp",
            "containerPort": 2000
          }
        ],
        "cpu": 32,
        "memoryReservation": 256,
        "image": "amazon/aws-xray-daemon",        
        "name": "xray-daemon",
        "user": "1337"
      }
]    